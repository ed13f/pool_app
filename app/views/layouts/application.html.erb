<!DOCTYPE html>
<html>
  <head>
    <title>PoolApp</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Kanit" rel="stylesheet">
    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <script src="//maps.google.com/maps/api/js?key=AIzaSyAno7RUQYwILcIEeUJC4FUxBkc2fR4cRK0"></script>
      <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
      <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->   
  </head>
  <body>
    <nav class="nav-container">
      <ul id="nav-main">
        <li>
        <% if session[:user_id] %>
        <% @user = User.find(session[:user_id]) %>
          <% if User.find(session[:user_id]).admin == true %>
            <% @biz = User.find(session[:user_id]) %>
            <li>
              <%= link_to "Business",business_path(@biz) %>
            </li>
          <% end %>
          <li>
            <%= link_to "Profile",user_path(@user) %>
          </li>
          <li>
            <%= link_to "New Customer", {:controller => "customers", :action=> "new"}, :method => :get %>
          </li>
          <li>
            <%= link_to "Repairs", {:controller => "repairs", :action=> "index"}, :method => :get %>
          </li>
        <% end %>  
      </ul>
      <ul id="nav-user">
        <% if session[:user_id] %>
        <% @user = User.find(session[:user_id]) %>
          <li>
            <%= link_to "logout", {:controller => "sessions", :action=> "destroy"}, :method => :delete %>
          </li>
        <% else %>
          <li>
            <%= link_to "Sign in", {:controller => "sessions", :action=> "new"}, :method => :get %>
          </li>
          <li>
            <%= link_to "Register", {:controller => "businesses", :action=> "new"}, :method => :get %>
          </li>
        <% end %>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
