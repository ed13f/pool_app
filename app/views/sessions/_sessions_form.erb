<%= form_tag :action => :create, local: true do |f| %>
  <div class="session-email input-wrapper flex-1">
    <%= text_field_tag 'email', nil, placeholder: "Email*", :autocomplete => :off %>
  </div>
  <div class="session-password input-wrapper flex-1">
    <%= password_field_tag :password, nil, :placeholder => "Password*", :autocomplete => :off %>
  </div>
  <div class="session-type flex">
	  <div class="session-type-title flex-1">
      <%= label_tag "Type of account?" %>
    </div>
    <div class="session-type-options flex-1 flex">
    	<div class="input-wrapper">
	    <%= label_tag "user", nil,  class: 'input-wrapper checkbox-custom-label'  %>
	    <%= radio_button_tag 'type', 'user', true,  class: 'checkbox-custom' %></div>
	    <div class="input-wrapper">
	    <%= label_tag "business", nil,  class: 'input-wrapper checkbox-custom-label' %>
	    <%= radio_button_tag 'type', 'business', true,  class: 'checkbox-custom' %>
	    </div>
	  </div>
  </div>
  <div class="forgot-password-wrapper">
	  <%= link_to "Forgot Password?", {controller: "resets", action: "new"}, class: "forgot-password" %>
	</div>
  <div class="new-session-submit">
    <%= submit_tag 'Login' %>
    <%= link_to 'Register', {:controller => "businesses", :action=> "new"}, :method => :get %>
  </div>
<% end %>