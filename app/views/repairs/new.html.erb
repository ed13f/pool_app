<main>
  <header>
    <h1 class="new-repair-header">New Repair</h1>
  </header>
  <% if flash[:notice] %>
      <ul>
      <% flash[:notice].each do |message| %>
        <li><%= message%></li>
      <% end %>
    </ul>
  <% end %>
  <section class="new-repair-form">
    <%= form_for(@repair) do |f| %>
      <div class="repair-title">
        <%= f.label :title, "Title:" %><br>
        <%= f.text_field :title %>
      </div>
      <div class="repair-textarea">
        <%= f.label :description, "Description:" %><br>
        <%= f.text_area :description %>
      </div>
      <div class="repair-new-bottom">
        <div class="new-repair-img">
          <%= f.label :photo, "Photo: "%><br>
          <%= f.file_field :photo %>
        </div>
          <%= f.hidden_field :customer_id, :value => params[:id] %>
        <div class="new-repair-submit">
          <%= f.submit %>
          <%= link_to 'Cancel', controller: "customers", action: "show", id: params[:id] %>
        </div>
      </div>
    <% end %>
  </section>
</main>