<main>
  <header>
    <h1 class="new-user-header">Register New User</h1>
  </header>
  <section>
    <article class="new-user-form">
      <%= form_for(@user) do |f| %>
        <%= f.text_field :first_name, :placeholder => "First Name", :autocomplete => :off %>

        <%= f.text_field :last_name, :placeholder => "Last Name", :autocomplete => :off %>

        <%= f.text_field :phone, :placeholder => "Phone Number", :autocomplete => :off %>

        <%= f.text_field :email, :placeholder => "Email", :autocomplete => :off %>

        <%= f.password_field :password, :placeholder => "Password", :autocomplete => :off %>
        <% if session[:business_id] %>
          <div class="admin-input">

              <%= f.label "Made User an Admin?" %>

              <%= f.check_box :admin %>

          </div>
        <% end %>
        <div class="new-user-submit">
          <%= f.submit %>
          <%= link_to 'Cancel', :controller => "businesses", :action => "show", :id => session[:business_id] ? session[:business_id] : User.find_by_id(session[:user_id]).business.id %>
        </div>
      <% end %>
    </article>
  </section>
</main>